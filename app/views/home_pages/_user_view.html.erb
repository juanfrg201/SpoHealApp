<div class="container conteiner-margin">
  <button id="btn-enable-notifications">Permitir notificaciones</button>
  <div class="hero-body">
    <div class="container">
      <!-- Card con tabla -->
      <div class="card">
        <header class="card-header">
          <p class="card-header-title">
            Días Activos
          </p>
        </header>
        <div class="card-content">
          <div class="content mt-0">
    
            <%= render 'table_info' %>
          </div>
        </div>
      </div>

      <!-- Agregamos una separación entre las tarjetas -->
      <div class="mt-4"></div>

      <!-- Card con recomendaciones -->
      <div class="content has-text-centered">
        <p class=" has-text-success">Recomendaciones</p>
      </div>
      <div class="card has-shadow-8">
        
        <% @recommendation.each do |recommendation| %>
          <div class="content-container">
            <div class="custom-section-container first-custom-section">
              <div class="left-section">
                <div class="image-container">
                  <img src="<%= asset_path('corredor.png') %>" alt="Logo corredor" class="image">
                </div>
              </div>
              <div class="right-section">
                <div class="">
                  <strong class="section-text" style="display: block; text-align: center;">
                    <%= recommendation.name %>
                  </strong>
                </div>
                <div class="">
                  <p class="section-text"><%= recommendation.description %>s</p>
                </div>
              </div>
            </div>
          </div>
        <% end %>
        
      </div>
    </div>
  </div>
</div>